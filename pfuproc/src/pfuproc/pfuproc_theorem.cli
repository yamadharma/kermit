  \@addtoreset{Proposition}{PFUtitle}
}
{
  \theoremstyle{plain}
  \newtheorem{Statement}{\StatementName}
  \newtheorem*{Statement*}{\StatementName}
  \@addtoreset{Statement}{PFUtitle}
}
{
  \theoremstyle{definition}
  \newtheorem{Example}{\ExampleName}
  \newtheorem*{Example*}{\ExampleName}
  \@addtoreset{Example}{PFUtitle}
}


