}
{
  \theoremstyle{definition}
  \newtheorem{Def}{\DefName}
  \newtheorem*{Def*}{\DefName}
  \@addtoreset{Def}{PFUtitle}
}
{
  \theoremstyle{plain}
  \newtheorem{Proposition}{\PropositionName}
