% Prepare to export for ojs

\RequirePackage{refcount}

%\g@addto@macro\@title@hook@post{%
\def\@title@hook@post{%
   \let\ojs@entry\@empty
   \g@addto@macro\ojs@entry{%
    [[\currfilebase]]\par%
    title = """\@title"""\par%
   }
   \addtocontents{ojs.ini}{\ojs@entry}
   \let\ojs@entry\@empty
}

